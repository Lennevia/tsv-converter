{
  "package": {
    "productName": "TinyTV Video Converter",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../build",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "yarn vite",
    "beforeBuildCommand": "yarn vite build"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.lennevia.tsv-converter",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": ["bin/ffmpeg"],
      "copyright": "Â© Copyright 2022 TinyCircuits",
      "category": "Utility",
      "shortDescription": "TinyCircuits TinyTV Video Converter.",
      "longDescription": "TinyCircuits TinyTV Video Converter.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "license": "../LICENSE",
        "minimumSystemVersion": "10.13",
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "dialog": {
        "open": true,
        "save": true
      },
      "globalShortcut": {
        "all": true
      },
      "protocol": {
        "asset": true
      },
      "shell": {
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "bin/ffmpeg",
            "cmd": "bin/ffmpeg",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "window": {
        "show": true
      }
    },
    "windows": [
      {
        "title": "TinyTV Video Converter",
        "width": 800,
        "height": 600,
        "visible": false,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src: 'self'; media-src 'self' asset: https://asset.localhost"
    }
  }
}
